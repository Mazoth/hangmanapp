<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDBDB"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Score_Container"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/win_score_symbol"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:contentDescription="A happy smiley face indicading amount of wins"
            android:src="@drawable/win_score_icon" />

        <TextView
            android:id="@+id/win_score_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hangman_picture_container"
            android:minWidth="50dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#669900"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/lost_score_symbol"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:contentDescription="A sad smiley face indicading amount of loses"
            android:src="@drawable/lost_score_icon" />

        <TextView
            android:id="@+id/lost_score_counter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/hangman_picture_container"
            android:minWidth="50dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hangman_picture_container"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_alignEnd="@+id/current_word"
        android:layout_alignStart="@+id/Score_Container"
        android:layout_below="@+id/Score_Container"
        android:contentDescription="Current hangman state"
        android:src="@drawable/hangman_1st_wrong"
        android:longClickable="false"
        android:adjustViewBounds="false"
        android:clickable="false"
        android:cropToPadding="true"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/current_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Score_Container"
        android:layout_alignStart="@+id/Score_Container"
        android:layout_below="@+id/hangman_picture_container"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/keyboard_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/current_word"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <GridLayout
            android:id="@+id/keyboard_container_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="A" />

            <Button
                android:id="@+id/button28"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="B" />

            <Button
                android:id="@+id/button29"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="C" />

            <Button
                android:id="@+id/button34"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="0"
                android:text="D" />

            <Button
                android:id="@+id/button35"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="I" />

            <Button
                android:id="@+id/button36"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="J" />

            <Button
                android:id="@+id/button37"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="1"
                android:singleLine="false"
                android:text="K" />

            <Button
                android:id="@+id/button38"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="1"
                android:text="L" />

            <Button
                android:id="@+id/button39"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Q" />

            <Button
                android:id="@+id/button40"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="R" />

            <Button
                android:id="@+id/button41"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="2"
                android:text="S" />

            <Button
                android:id="@+id/button42"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="2"
                android:text="T" />

            <Button
                android:id="@+id/button43"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Y" />

            <Button
                android:id="@+id/button44"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="Z" />

            <Button
                android:id="@+id/button45"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="3"
                android:text="Æ" />

            <Button
                android:id="@+id/button46"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="3"
                android:text="Ø" />

        </GridLayout>

        <GridLayout
            android:id="@+id/keyboard_container_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4">

            <Button
                android:id="@+id/button47"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="E" />

            <Button
                android:id="@+id/button48"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="0"
                android:focusable="false"
                android:text="F" />

            <Button
                android:id="@+id/button49"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="G" />

            <Button
                android:id="@+id/button50"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="0"
                android:text="H" />

            <Button
                android:id="@+id/button51"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="M" />

            <Button
                android:id="@+id/button52"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="N" />

            <Button
                android:id="@+id/button53"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="O" />

            <Button
                android:id="@+id/button54"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="1"
                android:text="P" />

            <Button
                android:id="@+id/button55"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="U" />

            <Button
                android:id="@+id/button56"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="V" />

            <Button
                android:id="@+id/button57"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="2"
                android:text="W" />

            <Button
                android:id="@+id/button58"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_row="2"
                android:text="X" />

            <Button
                android:id="@+id/button59"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Å" />

            <Button
                android:id="@+id/confirm_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:text="OK" />
        </GridLayout>

    </LinearLayout>

</RelativeLayout>